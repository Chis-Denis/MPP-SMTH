@{
    ViewData["Title"] = "Home Page";
}

@* Start of change: Beautiful homepage for party/candidate management system *@
<div class="text-center mt-5">
    <h1 class="display-3 mb-4">Welcome to the Romanian Party & Candidate Management System</h1>
    <p class="lead mb-5">Explore Romanian political parties and their candidates. Use the navigation above to view, add, or manage parties and candidates.</p>
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                @* Start of change: Use SVG icon as fallback for PSD logo *@
                <div class="d-flex justify-content-center align-items-center" style="height: 180px;">
                    <svg width="100" height="100" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" fill="#e63946"/>
                        <text x="12" y="16" text-anchor="middle" fill="white" font-size="2rem" font-family="Arial" font-weight="bold">PSD</text>
                    </svg>
                </div>
                @* End of change: Use SVG icon as fallback for PSD logo *@
                <div class="card-body">
                    <h5 class="card-title">Parties</h5>
                    <p class="card-text">View, add, edit, or delete Romanian political parties.</p>
                    <a asp-controller="Party" asp-action="Index" class="btn btn-primary">Go to Parties</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="https://randomuser.me/api/portraits/men/1.jpg" class="card-img-top p-4" style="height: 180px; object-fit: contain;" alt="Candidate" />
                <div class="card-body">
                    <h5 class="card-title">Candidates</h5>
                    <p class="card-text">View, add, edit, or delete candidates and see their party affiliation.</p>
                    <a asp-controller="Candidate" asp-action="Index" class="btn btn-success">Go to Candidates</a>
                </div>
            </div>
        </div>
    </div>
</div>
@* End of change: Beautiful homepage for party/candidate management system *@
